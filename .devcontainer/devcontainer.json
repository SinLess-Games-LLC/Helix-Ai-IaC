// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Archetecture (IaC) Dev Container",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"image": "mcr.microsoft.com/devcontainers/base:bullseye",
	"privileged": true,
  	"containerEnv": {
    	"KUBECONFIG": "${containerWorkspaceFolder}/kubeconfig",
    	"SOPS_AGE_KEY_FILE": "${containerWorkspaceFolder}/age.key"
  	},
	"postCreateCommand": {
		"init": "./.devcontainer/init/init.sh"
	},
	// Features to add to the dev container. More info: https://containers.dev/features.
	"features": {
		// Age and sops
		"ghcr.io/devcontainers-contrib/features/age:1": {},
		"ghcr.io/devcontainers-contrib/features/sops:1": {},
		/**
		  * IaC tools
		  * - ansible
		  * - aws-cli
		  * - terraform
		  * - Packer
		  * - cloudflared
		  */
		"ghcr.io/devcontainers/features/aws-cli:1": {},
		"ghcr.io/devcontainers-contrib/features/cloudflared:1": {},
		"ghcr.io/devcontainers-contrib/features/ansible:2": {},
		"ghcr.io/devcontainers-contrib/features/packer-asdf:2": {},
		"ghcr.io/devcontainers/features/terraform:1": {},
		/**
		  * Languages
		  * - python
		  */
		"ghcr.io/devcontainers/features/python:1": {
			"version": "3.12",
      "optimize": "true"
		},
		/**
		  * Kubernetes tools
		  * - kubectl
		  * - helm
		  * - cilium
		  * - flux
		  * - kustomize
		  * - kubeconform
		  * - kubectl-helm
		  * - kustomize
		  */
		"ghcr.io/jsburckhardt/devcontainer-features/flux:1": {},
		"ghcr.io/rio/features/kustomize:1": {},
		"ghcr.io/gickis/devcontainer-features/kubeconform:1": {},
		"ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {
           "minikube": "none"
		},
		"ghcr.io/audacioustux/devcontainers/cilium:1": {},
		/**
      * Common utils
      * - zsh
      * - direnv
      * - go-task
      */
		"ghcr.io/devcontainers/features/common-utils:2": {
			"configureZshAsDefaultShell": true,
		},
		"ghcr.io/devcontainers-contrib/features/go-task:1": {},
		"ghcr.io/devcontainers-contrib/features/direnv:1": {},
		"ghcr.io/dhoeric/features/stern:1": {},
		"ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {}
	},
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh"
      },
      "extensions": [
        "wholroyd.jinja",
        "signageos.signageos-vscode-sops",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "esbenp.prettier-vscode",
        "ms-python.python",
        "ms-python.vscode-pylance",
        "redhat.ansible",
        "redhat.vscode-yaml",
        "amazonwebservices.aws-toolkit-vscode",
        "hashicorp.terraform",
        "hashicorp.hcl",
        "eamodio.gitlens",
        "DavidAnson.vscode-markdownlint",
        "mrmlnc.vscode-json5",
        "mikestead.dotenv",
        "ms-vscode-remote.remote-containers",
        "EditorConfig.EditorConfig",
        "fcrespo82.markdown-table-formatter",
        "PsykoSoldi3r.vscode-git-flow",
        "CodeReviewer14.cyber77-vscode"
      ]
    }
  }
	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	// "forwardPorts": [],

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
