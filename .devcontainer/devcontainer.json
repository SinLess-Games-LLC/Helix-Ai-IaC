// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
  "name": "Helix Ai (IaC) Dev Container",
  // Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
  // "image": "mcr.microsoft.com/devcontainers/base:bullseye",
  "build": {
    "dockerfile": "./Dockerfile"
  },
  "containerEnv": {
    "KUBECONFIG": "/workspaces/Helix-Ai-IaC/kubeconfig",
    "SOPS_AGE_KEY_FILE": "/workspaces/Helix-Ai-IaC/.age.key"
  },
  "privileged": true,
  "postCreateCommand": {
    "clone zsh-autosuggestions": "git clone https://github.com/zsh-users/zsh-autosuggestions ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-autosuggestions",
    "clone zsh-syntax-highlighting": "git clone https://github.com/zsh-users/zsh-syntax-highlighting.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/zsh-syntax-highlighting",
    "clone envrc plugin": "git clone https://github.com/fabiogibson/envrc-zsh-plugin.git ${ZSH_CUSTOM:-~/.oh-my-zsh/custom}/plugins/envrc",
    // This is to add the plugins to the zshrc file
    "zsh plugins": "sed -i 's/plugins=(git)/plugins=(git envrc git-extras history mvn web-search ansible aws docker docker-compose fluxcd helm kubectl sudo suse systemd terraform zsh-autosuggestions zsh-syntax-highlighting)/' ~/.zshrc",
    // to change the zsh theme, change the value of strug to the desired theme
    // If you need to install the theme do it before this step.
    "zsh theme": "sed -i 's/ZSH_THEME=\"devcontainers\"/ZSH_THEME=\"strug\"/g' ~/.zshrc",
    "ssh1": "cp ./.ssh/id_ed25519 ~/.ssh/id_ed25519 && cp ./.ssh/id_ed25519.pub ~/.ssh/id_ed25519.pub"
  },
  "postStartCommand": {
    "upgrade-pip": "python3 -m pip install --upgrade pip setuptools wheel",
    "install-python-requirements": "python3 -m pip install -r ./requirements.txt",
    "install-ansible-requirements": "ansible-galaxy install --role-file ./requirements.yaml",
    // sudo is required to change permissions
    "ssh2": "sudo chmod 600 ~/.ssh/id_ed25519",
    "install K9S": "go install github.com/derailed/k9s@latest",
    "set github creds 1": "git config --global user.name Sinless777",
    "set github creds 2": "git config --global user.email disdainful777@gmail.com",
    "copy gpg key": "cp ./.devcontainer/gpg-pubkey ~/.gnupg/pub.gpg"
  },
  // Features to add to the dev container. More info: https://containers.dev/features.
  "features": {
    // Age and sops
    "ghcr.io/devcontainers-contrib/features/age-keygen:1": {},
    "ghcr.io/devcontainers-contrib/features/age:1": {},
    "ghcr.io/devcontainers-contrib/features/sops:1": {},
    /**
     * IaC tools
     * - ansible
     * - aws-cli
     * - terraform
     * - Packer
     * - cloudflared
     */
    "ghcr.io/devcontainers/features/aws-cli:1": {},
    "ghcr.io/devcontainers-contrib/features/cloudflared:1": {},
    "ghcr.io/devcontainers-contrib/features/ansible:2": {},
    "ghcr.io/devcontainers-contrib/features/packer-asdf:2": {
      "version": "1.8.4"
    },
    "ghcr.io/devcontainers/features/terraform:1": {},
    /**
     * Languages
     * - python
     * - go
     */
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/go:1": {},
    /**
     * Kubernetes tools
     * - kubectl
     * - helm
     * - cilium
     * - flux
     * - kustomize
     * - kubeconform
     * - kubectl-helm
     * - kustomize
     * - istioctl
     */
    "ghcr.io/jsburckhardt/devcontainer-features/flux:1": {},
    "ghcr.io/devcontainers/features/kubectl-helm-minikube:1": {},
    "ghcr.io/rio/features/kustomize:1": {},
    "ghcr.io/gickis/devcontainer-features/kubeconform:1": {},
    "ghcr.io/devcontainers-contrib/features/kubectl-asdf:2": {},
    "ghcr.io/audacioustux/devcontainers/cilium:1": {},
    "ghcr.io/devcontainers-contrib/features/istioctl:1": {},
    /**
     * Common utils
     * - zsh
     * - direnv
     * - go-task
     * - homebrew
     */
    "ghcr.io/devcontainers/features/common-utils:2": {
      "configureZshAsDefaultShell": true,
      "installOhMyZshConfig": true
    },
    "ghcr.io/devcontainers-contrib/features/go-task:1": {},
    "ghcr.io/devcontainers-contrib/features/direnv:1": {},
    "ghcr.io/dhoeric/features/stern:1": {},
    "ghcr.io/eitsupi/devcontainer-features/jq-likes:2": {
      "jqVersion": "latest",
      "yqVersion": "latest"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.profiles.linux": {
          "bash": {
            "path": "/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        // change terminal fonnt size to 18
        "terminal.integrated.fontSize": 18,
        "files.autoSave": "onFocusChange"
      },
      "extensions": [
        "samuelcolvin.jinjahtml",
        "ms-kubernetes-tools.vscode-kubernetes-tools",
        "signageos.signageos-vscode-sops",
        "GitHub.copilot",
        "BenjaminBenais.copilot-theme"
      ]
    }
  }
}
