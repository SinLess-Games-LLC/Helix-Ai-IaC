FROM mcr.microsoft.com/devcontainers/base:bullseye

# Install apt packages
RUN sudo apt-get update -y --fix-missing \
    && sudo apt-get install -y genisoimage qemu-utils qemu-system ovmf cloud-image-utils make curtain git curl zsh tzdata

# Install oh-my-zsh
# Default powerline10k theme, no plugins installed
RUN wget https://github.com/robbyrussell/oh-my-zsh/raw/master/tools/install.sh -O - | zsh || true

# Copy ssh keys
COPY .ssh /root/.ssh

# Download SSH keys and create .ssh directory
RUN curl -sL 'https://github.com/SinLess-Games.keys' >> /root/.ssh/authorized_keys

