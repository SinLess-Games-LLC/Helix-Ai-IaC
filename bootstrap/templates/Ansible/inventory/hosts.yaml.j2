---
kubernetes:
  children:
    master:
      hosts:
        {% for item in bootstrap_nodes.master %}
        "{{ item.name }}":
          ansible_user: "{{ item.username }}"
          ansible_host: "{{ item.address }}"
        {% endfor %}
    worker:
      hosts:
        {% for item in bootstrap_nodes.worker %}
        "{{ item.name }}":
          ansible_user: "{{ item.username }}"
          ansible_host: "{{ item.address }}"
        {% endfor %}

