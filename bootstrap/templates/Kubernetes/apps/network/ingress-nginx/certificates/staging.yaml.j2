---
apiVersion: cert-manager.io/v1
kind: Certificate
metadata:
  name: "${SECRET_DOMAIN_1/./-}-staging"
spec:
  secretName: "${SECRET_DOMAIN_1/./-}-staging-tls"
  issuerRef:
    name: letsencrypt-staging
    kind: ClusterIssuer
  commonName: "${SECRET_DOMAIN_1}"
  dnsNames:
    - "${SECRET_DOMAIN_1}"
    - "*.${SECRET_DOMAIN_1}"
